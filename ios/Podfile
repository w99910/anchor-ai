platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  # Required for Coinbase Wallet SDK
  pod 'CoinbaseWalletSDK', '~> 1.0'
  
  # ExecuTorch LLM is added via Swift Package Manager in Xcode
  # See ios/Runner.xcodeproj for SPM configuration
  # Required packages from https://github.com/pytorch/executorch (swiftpm-1.1.0 branch):
  #   - executorch_debug (required for backend registration)
  #   - executorch_llm_debug (or executorch_llm_release for production)
  #   - backend_coreml
  #   - backend_mps
  #   - backend_xnnpack
  #   - kernels_llm
  #   - kernels_optimized
  #   - kernels_quantized
  #   - kernels_torchao (optional)
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Fix for Xcode 15+ and iOS 13+ deployment target
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
  
  # Add -all_load linker flag for Runner target to ensure ExecuTorch backends register
  # This forces the linker to include all object files from static libraries,
  # which is required for C++ static constructors (backend registration) to run
  main_project = installer.aggregate_targets.first&.user_project
  if main_project
    main_project.targets.each do |target|
      if target.name == 'Runner'
        target.build_configurations.each do |config|
          existing_flags = config.build_settings['OTHER_LDFLAGS'] || ['$(inherited)']
          existing_flags = [existing_flags] if existing_flags.is_a?(String)
          unless existing_flags.include?('-all_load')
            config.build_settings['OTHER_LDFLAGS'] = existing_flags + ['-all_load']
          end
        end
      end
    end
    main_project.save
  end
end
